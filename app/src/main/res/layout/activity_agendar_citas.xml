<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00537F"
    android:fillViewport="true"
    tools:context=".AgendarCitas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_white_background"
            android:src="@drawable/ic_arrow_back_dark"
            android:contentDescription="Regresar"
            android:elevation="4dp"
            android:padding="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="60dp"
            android:stateListAnimator="@animator/button_state_list_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Title -->
        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agendar Cita"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Form Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="InformaciÃ³n de la Cita"
                    android:textColor="#00537F"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />

                <!-- User Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cliente"
                        android:textColor="#00537F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F9FA">

                        <Spinner
                            android:id="@+id/spinnerUser"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Pet Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mascota"
                        android:textColor="#00537F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F9FA">

                        <Spinner
                            android:id="@+id/spinnerPet"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:background="@android:color/transparent" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Date and Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <!-- Date Selection -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha"
                            android:textColor="#00537F"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F8F9FA">

                            <LinearLayout
                                android:id="@+id/dateContainer"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="?android:attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    app:tint="#00537F"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/tvSelectedDate"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Seleccionar fecha"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Time Selection -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hora"
                            android:textColor="#00537F"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F8F9FA">

                            <LinearLayout
                                android:id="@+id/timeContainer"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp"
                                android:background="?android:attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/reloj"
                                    app:tint="#00537F"
                                    android:layout_marginEnd="8dp" />

                                <TextView
                                    android:id="@+id/tvSelectedTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Seleccionar hora"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Notes Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notas (Opcional)"
                        android:textColor="#00537F"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F9FA">

                        <EditText
                            android:id="@+id/etNotes"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:padding="16dp"
                            android:background="@android:color/transparent"
                            android:hint="Agregar notas sobre la cita..."
                            android:textColorHint="#999999"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:gravity="top"
                            android:inputType="textMultiLine|textCapSentences" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Cancel Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F8F9FA">

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Cancelar"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:stateListAnimator="@animator/button_state_list_anim" />

                    </androidx.cardview.widget.CardView>

                    <!-- Confirm Button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#00537F">

                        <Button
                            android:id="@+id/btnConfirm"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Agendar Cita"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="@android:color/transparent"
                            android:stateListAnimator="@animator/button_state_list_anim" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>